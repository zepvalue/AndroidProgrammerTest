<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.github.siyamed.shapeimageview.CircularImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/avatarImageView"
        android:src="@drawable/ic_apppartner"
        app:siBorderWidth="6dp"
        app:siBorderColor="@color/cardview_light_background"/>

    <TextView
        android:id="@+id/usernameTextView"
        android:textSize="19sp"
        android:text="Username"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/avatarImageView"
        android:layout_toEndOf="@+id/avatarImageView"
        android:layout_marginRight="70dp"/>

    <TextView
        android:id="@+id/messageTextView"
        android:textSize="15sp"
        android:text="Message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/usernameTextView"
        android:layout_alignLeft="@+id/usernameTextView"
        android:layout_alignStart="@+id/usernameTextView"
        android:layout_marginRight="75dp"
        android:layout_marginBottom="8dp"/>

</RelativeLayout>