<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".Activities.MainActivity"
    android:gravity="center"
    android:background="@drawable/bg_coding_tasks">

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CODING TASKS"
        android:id="@+id/textViewCodingTasks"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        android:gravity="center" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonChat"
        android:onClick="onChatButtonClicked"
        android:background="@drawable/btn_main_chat"
        android:layout_marginTop="12dp"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_main_login"
        android:id="@+id/buttonLogin"
        android:onClick="onLoginButtonClicked"
        android:layout_marginTop="12dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_main_animation"
        android:id="@+id/buttonAnimation"
        android:onClick="onAnimationTestButtonClicked"
        android:layout_marginTop="12dp"
        android:gravity="center" />

</LinearLayout>
